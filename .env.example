# BrickLayers Web Application - Environment Configuration
# Copy this file to .env and update values as needed

# Application Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS Configuration (comma-separated origins)
# Development: Use "*" or "http://localhost:3000,http://localhost:8000"
# Production: Use specific domains
CORS_ORIGINS=*

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=temp/uploads
OUTPUT_DIR=temp/outputs

# Processing Configuration
PROCESSING_TIMEOUT=900  # 15 minutes in seconds
MAX_CONCURRENT_JOBS=5

# File Cleanup Configuration
FILE_RETENTION_HOURS=24
CLEANUP_INTERVAL_MINUTES=60

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
JSON_LOGS=false  # Set to true for production (machine-parseable logs)

# ==============================================================================
# Security Configuration
# ==============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_UPLOAD=10/minute
RATE_LIMIT_STATUS=30/minute
RATE_LIMIT_DOWNLOAD=20/minute
RATE_LIMIT_CANCEL=15/minute
RATE_LIMIT_GLOBAL=100/minute

# Request Size Limits
REQUEST_SIZE_LIMIT_ENABLED=true
MAX_HEADER_SIZE_KB=16
MAX_REQUEST_BODY_MB=100

# File Content Scanning
FILE_SCANNING_ENABLED=true
FILE_SCANNING_STRICT_MODE=false  # Set true for high-security environments

# API Authentication (Optional)
API_AUTH_ENABLED=false
API_AUTH_REQUIRED=false
API_KEY_HEADER=X-API-Key
# Format: keyname1:hash1,keyname2:hash2
# Generate hash: python -c "import hashlib; print(hashlib.sha256(b'your-secret-key').hexdigest())"
API_KEYS=

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=false  # Set true in production with HTTPS
HSTS_MAX_AGE=31536000  # 1 year
CSP_ENABLED=true
